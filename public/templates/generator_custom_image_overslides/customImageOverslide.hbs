<div class="customImageFormContainer">

<div class="row-fluid chart" id="title">
	<h4 class="title">Nouvel Overslide Avec Upload d'image</h4>
</div>
		
<div class="row-fluid form-wrapper" id="allContent">
	<div class="span4">
		<form class="form-horizontal" id="uploadImageBannerForm" action="/uploadCustomImageBanner" method="post"  enctype="multipart/form-data" novalidate="">

			<div class="control-group field-box">
					<label class="control-label" for="campaign">Campagne</label>
					<div class="controls">
						<select class="span12 select2" name="campaignID">
								{{{campaigns}}
						</select>
					</div>
			</div>

			<div class="control-group field-box"> 
					<label class="control-label" for="track">Nom du Client</label>
					<div class="controls">
						<input type="text" id="clientName" name="clientName" value="" class="input-xxlarge validation" pattern="(.){2,}">
						<span class="alert-msg"><i class="icon-remove-sign"></i> Le nom du client ne peut être vide</span>
					</div>
			</div>

			<div class="control-group field-box"> 
					<label class="control-label" for="track">Nom de la campagne</label>
					<div class="controls">
						<input type="text" id="campaignName" name="campaignName"  class="input-xxlarge validation" pattern="(.){5,}" >
						<span class="alert-msg"><i class="icon-remove-sign"></i> Le nom de la campagne ne peut être inférieur à 5 lettres</span>
					</div>
			</div>

			<div class="control-group field-box"> 
					<label class="control-label" for="track">TrackingLink</label>
					<div class="controls">
						<input type="text" id="trackLink" name="trackLink" value="" class="input-xxlarge validation">
					</div>
			</div>

			<div class="control-group field-box"> 
					<label class="control-label" for="track">Pixel d'impression</label>
					<div class="controls">
						<input type="text" id="pixelImpression" name="pixelImpression" class="input-xxlarge validation">
					</div>
			</div>

			
			<div class="control-group field-box"> 
					<label class="control-label" for="track">Nom du format dans le BackOffice</label>
					<div class="controls">
						<input type="text" id="formatName" name="formatName" value="" class="input-xxlarge validation"  pattern="(.){5,}">
						<span class="alert-msg"><i class="icon-remove-sign"></i> Le nom fu format ne peut être inférieur à 5 lettres</span>
					</div>
			</div>

			<div class="control-group field-box">
				<label class="control-label" for="imageName">Image : </label>
				<div class="controls">
					<input type="file" id="customImage" name="customImage" accept="image/x-png, image/gif, image/jpeg, image/png"><br>
					<span class="alert-msg"><i class="icon-remove-sign"></i> Vous devez sélectionner une image !</span>
				</div>
			</div>

			<div class="field-box">
				<label  for="lang">Position de l Overslide</label>
				<label class="checkbox">
					<span><input type="radio" value="left" name="side" checked></span>Gauche
				</label>

				<label class="checkbox">
					<span><input type="radio" value="right" name="side"></span>Droite 
				</label>
			</div>

			<input type="hidden" name="banner_type" value="tab">
			<input type="submit" class="btn-glow primary" value="Uploader l'image" id="uploadImageBanner">
	


		</form>

	</div>

</div>

</div>